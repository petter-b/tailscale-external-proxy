{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/^Chart\\.yaml$/"
      ],
      "matchStrings": [
        "appVersion:\\s*\"?(?<currentValue>.*?)\"?\\s*#\\s*renovate:\\s*datasource=(?<datasource>.*?)\\s+depName=(?<depName>.*?)\\s*$"
      ],
      "datasourceTemplate": "{{datasource}}",
      "depNameTemplate": "{{depName}}"
    }
  ],
  "packageRules": [
    {
      "description": "Separate major updates for review",
      "matchUpdateTypes": [
        "major"
      ],
      "automerge": false
    },
    {
      "description": "Caddy image updates in Chart.yaml",
      "matchDatasources": [
        "docker"
      ],
      "matchFileNames": [
        "./Chart.yaml"
      ],
      "automerge": true,
      "pinDigest": {
        "enabled": false
      },
      "digest": {
        "enabled": false
      },
      "labels": [
        "release-patch"
      ]
    }
  ]
}
