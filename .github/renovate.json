{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "helpers:pinGitHubActionDigests",
    ":configMigration",
    ":pinDevDependencies",
    "abandonments:recommended",
    ":approveMajorUpdates",
    ":automergeMinor",
    ":automergeRequireAllStatusChecks",
    ":enableVulnerabilityAlerts",
    ":ignoreUnstable"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/^Chart\\.yaml$/"
      ],
      "matchStrings": [
        "appVersion:\\s*\"?(?<currentValue>.*?)\"?\\s*#\\s*renovate:\\s*datasource=(?<datasource>.*?)\\s+depName=(?<depName>.*?)\\s*$"
      ],
      "datasourceTemplate": "{{datasource}}",
      "depNameTemplate": "{{depName}}"
    }
  ],
  "packageRules": [
    {
      "description": "Separate major updates for review",
      "matchUpdateTypes": [
        "major"
      ],
      "automerge": false
    },
    {
      "description": "Caddy image updates (minor/patch) in Chart.yaml",
      "matchDatasources": [
        "docker"
      ],
      "matchFileNames": [
        "./Chart.yaml"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "automerge": true,
      "pinDigest": {
        "enabled": false
      },
      "labels": [
        "release-patch"
      ]
    },
    {
      "description": "Caddy image updates (major) in Chart.yaml",
      "matchDatasources": [
        "docker"
      ],
      "matchFileNames": [
        "./Chart.yaml"
      ],
      "matchUpdateTypes": [
        "major"
      ],
      "dependencyDashboardApproval": true,
      "automerge": false,
      "pinDigest": {
        "enabled": false
      }
    },
    {
      "description": "Pin all other docker images to SHA digest",
      "matchDatasources": [
        "docker"
      ],
      "pinDigest": {
        "enabled": true
      }
    }
  ]
}
